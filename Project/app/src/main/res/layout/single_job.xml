<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/singleJob"
    android:orientation="vertical"
    android:layout_margin="2pt" >


    <TextView
        android:id="@+id/jobTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="No Title"
        android:textSize="20sp"
        />

    <View style="@style/HorizontalDivider" />

    <TextView
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint = "No Description"
        android:textSize="17sp"
        />


    <TextView
        android:id="@+id/status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="No Status"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/UsernamePrompt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Employer:   "
            />
        <TextView
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="No username"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/CategoryPrompt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Category:   "
            />

        <TextView
            android:id="@+id/category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="No Category"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/TagsPrompt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tags:   "
            />
        <TextView
            android:id="@+id/tags"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="No Tags"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/RewardPrompt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reward:   "
            />
        <TextView
            android:id="@+id/reward"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="No Reward"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/JobDatePrompt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date of Job:   "
            />
        <TextView
            android:id="@+id/JobDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="No Date"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/space"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint=""
        />


</LinearLayout>